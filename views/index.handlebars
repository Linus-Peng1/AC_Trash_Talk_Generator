<h1 class="my-5 text-center">你想對誰說幹話？</h1>

<div class="container">
  {{!-- target card --}}
  <form method="POST" action="/">
    <div class="row row-cols-1 row-cols-md-3 m-3">
      {{#each targets}}
      <div class="col">
        <div class="card my-3">
          <label class="form-check-label" for="{{this.id}}">
            <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}">
            <div class="form-check mx-auto my-3">
              <input class="form-check-input" type="radio" name="target" id="{{this.id}}" value="{{this.id}}"
                {{isSelected this.id}}>
              <h5 class="card-title">{{this.title}}</h5>
            </div>
          </label>
        </div>
      </div>
      {{/each}}
    </div>

    <div class="footer">
      <div>
        <button type="sunmit" class="btn btn-primary">產生幹話</button>
      </div>

      <div class="alert alert-primary col-9" role="alert">{{trashTalk}}
      </div>
    </div>
  </form>
</div>